unalias gsw
function gsw () {
  if [ -z "$1" ]
  then
    git switch $(git branch --all | fzf | tr -d '[:space:]') 
  else
    git switch "$1"
  fi
}

fpath=(~/.zsh $fpath)
autoload -Uz compinit
compinit -u

# "less that"
lt() {
  cmd=$(fc -ln -1)
  cmdl="${cmd} | less"
  eval $cmdl
}

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
eval "$(direnv hook zsh)"

# Colors from lonesnake
readonly CLR_BOLD="\033[1m"  # bold
readonly CLR_END="\033[0m"  # end-marker
function aap () {
    echo -n -e "${CLR_BOLD}Which Ansible target?${CLR_END} "
    local target_host="$( ansible-inventory --graph all | grep -o '[a-z].*[a-z0-9]' | fzf --reverse --height 30%)"
    echo -e "\r${CLR_BOLD}Which Ansible target?${CLR_END} $target_host"
    echo -n -e "${CLR_BOLD}Which playbook?${CLR_END} "
    local playbook="$(find playbooks -type f -depth 2 | sort | fzf --reverse --height 30%)"
    echo -e "\r${CLR_BOLD}Which playbook?${CLR_END} $target_host"
    print -z "ansible-playbook --limit ${target_host} ${playbook}"
}
function aas () {
    echo -n -e "${CLR_BOLD}Which Ansible target?${CLR_END} "
    local target_host="$( ansible-inventory --graph all | grep -o '[a-z].*[a-z0-9]' | fzf --reverse --height 30%)"
    echo -e "\r${CLR_BOLD}Which Ansible target?${CLR_END} $target_host"
    echo -n -e "${CLR_BOLD}Which shell command?${CLR_END} "
    local shell_command=""
    read shell_command
    print -z "ansible ${target_host} -m shell -a '${shell_command}'"
}

