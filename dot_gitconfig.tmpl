[user]
    email = {{ .git_email }}
    name = {{ .git_name }}
[pull]
    rebase = true
[push]
    autoSetupRemote = true

[core]
    difftool = true

[merge]
    conflictstyle = diff3

[init]
    defaultBranch = main

{{ if eq .chezmoi.os "darwin" }}
[url "git@git.2nd.io:"]
    insteadOf = https://git.2nd.io/
{{ end }}

[url "ssh://git@github.com/"]
    insteadOf = https://github.com/

